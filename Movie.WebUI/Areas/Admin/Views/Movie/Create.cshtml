@model Movie.WebUI.Models.ViewModel.CreateMovieVM

<form asp-action="Create" asp-controller="Movie" enctype="multipart/form-data">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Create Movie</h1>
        <hr />

        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for=@Model.MovieDto.Title class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for=@Model.MovieDto.Title class="form-control" />
                <span asp-validation-for=@Model.MovieDto.Title class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for=@Model.MovieDto.Description class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for=@Model.MovieDto.Description class="form-control" rows="5"></textarea>
                <span asp-validation-for=@Model.MovieDto.Description class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for=@Model.MovieDto.TrailerUrl class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for=@Model.MovieDto.TrailerUrl class="form-control" rows="5"/>
                <span asp-validation-for=@Model.MovieDto.TrailerUrl class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for=@Model.GenreOptions class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for=@Model.MovieDto.SelectedGenres
                    asp-items=@Model.GenreOptions 
                    class="form-control" 
                    multiple="multiple">
                    @foreach(var genre in Model.GenreOptions)
                    {
                        <option value="@genre.Value">@genre.Text</option>
                    }

                </select>
            </div>

            <div class="col-2">
                <label asp-for=@Model.MovieDto.ImageUrl class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for=@Model.MovieDto.Image class="form-control" />
                <input asp-for=@Model.MovieDto.ImageUrl hidden class="form-control" />
                <span asp-validation-for=@Model.MovieDto.Image class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for=@Model.MovieDto.ReleaseDate class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for=@Model.MovieDto.ReleaseDate type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for=@Model.MovieDto.ReleaseDate class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="Index" asp-controller="Movie" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
