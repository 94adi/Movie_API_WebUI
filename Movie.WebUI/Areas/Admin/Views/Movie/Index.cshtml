@model IEnumerable<Movie.WebUI.Models.Dto.MovieDto>

<br />
<div class="container p-4 border">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-primary">Movies List</h1>
		</div>
		<div class="col text-end pt-1">
			<a asp-controller="Movie" asp-action="Create" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create New Movie</a>
		</div>
	</div>

	<table class="table">
		<thead>
			<tr>
				<th>
					Title
				</th>
				<th>
					Description
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Title</td>
					<td>@item.Description</td>
					<td>
						<a asp-controller="Movie" asp-action="Update" asp-route-movieId="@item.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
						<a asp-controller="Movie" asp-action="Delete" asp-route-movieId="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>