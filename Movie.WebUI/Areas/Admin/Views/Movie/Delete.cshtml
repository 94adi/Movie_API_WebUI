@model Movie.WebUI.Models.Dto.MovieDto

<form method="post" asp-action="Delete" asp-controller="Movie">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Movie: @Model.Title</h1>
        <hr />

        <input hidden asp-for="Id" />

        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col-2">
                        <label asp-for="Title" class="control-label pt-2" style="font-size:20px;"></label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="Title" disabled class="form-control" />
                    </div>

                    <div class="col-2">
                        <label asp-for="Description" class="control-label pt-2" style="font-size:20px;"></label>
                    </div>
                    <div class="col-10 pb-3">
                        <textarea asp-for="Description" disabled class="form-control" rows="5">
                        </textarea>
                    </div>
                    <div class="col-2">
                        <label asp-for="ReleaseDate" class="control-label pt-2" style="font-size:20px;"></label>
                    </div>

                    <div class="col-10 pb-3">
                        <input asp-for="ReleaseDate" disabled type="date" class="form-control" />
                    </div>

                    <div class="col-5 offset-2">
                        <a asp-action="Index" asp-controller="Movie" class="btn-primary btn form-control ">Back to List</a>
                    </div>
                    <div class="col-5">
                        <input type="submit" value="Delete" class="btn btn-danger form-control" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}