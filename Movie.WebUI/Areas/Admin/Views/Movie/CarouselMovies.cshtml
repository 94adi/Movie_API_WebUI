@model Movie.WebUI.Models.ViewModel.CarouselItemVM


    <form asp-area="Admin" asp-controller="Movie" asp-action="CarouselMovies">
        <div class="container border p-3">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="col-2">
                <label asp-for=@Model.MovieOptions class="control-label white-label form-label-size pt-2"></label>
                </div>

                <div class="col-10 pb-3">
                    <select asp-for=@Model.SelectedMovieOptions
                    class="form-control"
                    multiple="multiple">
                        @foreach(var movie in Model.MovieOptions){
                            <option value="@movie.Value">@movie.Text</option>
                        }
                </select>
                </div>

                <div class="col-5">
                    <input type="submit" value="Update" class="btn btn-success form-control" />
                </div>
            </div>
        </div>
    </form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
