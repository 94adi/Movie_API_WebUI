@model Movie.WebUI.Models.ViewModel.CarouselHighlightMoviesVM

<div id="carouselCaptions" class="carousel slide carousel-main-container" data-bs-ride="carousel">
    <div class="carousel-indicators">
        @for(int i = 0; i < Model.CarouselMovies.Count(); i++)
        {
            string isActive = i == 0? "active" : "";

            <button type="button" 
            data-bs-target="#carouselCaptions" 
            data-bs-slide-to="@i" 
            class="@isActive"
            aria-current="true" 
            aria-label="Slide @i">
            </button>
        }     
    </div>
    <div class="carousel-inner">
        @for (int index = 0; index < Model.CarouselMovies.Count(); index++)
        {
            var movie = Model.CarouselMovies[index];
            string carouselClass = @index == 0 ? "carousel-item active" : "carousel-item";

            <div class="@carouselClass">
                <img src="@movie.ImageUrl" class="d-block w-100 img-fluid" alt="@movie.Title">
                <div class="carousel-caption d-none d-md-block">
                    <h5>@movie.Title</h5>
                    <p>@movie.Description</p>
                </div>
            </div>
        }
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#carouselCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>