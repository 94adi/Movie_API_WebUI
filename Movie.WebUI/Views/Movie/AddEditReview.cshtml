@model Movie.WebUI.Models.ViewModel.UpsertReviewVM

<form asp-action="AddEditReview" asp-controller="Movie">

    <input type="hidden" asp-for=@Model.ReviewDto.UserId />
    <input type="hidden" asp-for=@Model.ReviewDto.MovieId />
    <input type="hidden" asp-for=@Model.RatingDto.UserId />
    <input type="hidden" asp-for=@Model.RatingDto.MovieId />
    <input type="hidden" asp-for=@Model.ReviewDto.Id />

    <br />
    <div class="container border p-3">
        <h1 class="text-primary text-white">@Model.PageTitle</h1>
        <hr />

        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-2">
                    <label asp-for=@Model.RatingDto.RatingValue class="control-label white-label pt-2" style="font-size:20px;"></label>
                </div>
                <div class="col-1 pb-3">
                    @{
                        var ratingValue = Model.RatingDto.RatingValue > 0
                                            ? @Model.RatingDto.RatingValue.ToString() : "5";

                    <input asp-for=@Model.RatingDto.RatingValue 
                    type="number"
                    value="@ratingValue"
                    min="1" 
                    max="10" 
                    step="1" 
                    class="form-control" />
                    }
                    <span asp-validation-for=@Model.RatingDto.RatingValue class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-2">
                    <label asp-for=@Model.ReviewDto.Title class="control-label white-label pt-2" style="font-size:20px;"></label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for=@Model.ReviewDto.Title class="form-control" rows="5" />
                    <span asp-validation-for=@Model.ReviewDto.Title class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-2">
                    <label asp-for=@Model.ReviewDto.Content class="control-label white-label pt-2" style="font-size:20px;"></label>
                </div>
                <div class="col-10 pb-3">
                    <textarea asp-for=@Model.ReviewDto.Content class="form-control" rows="5"></textarea>
                    <span asp-validation-for=@Model.ReviewDto.Content class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-5 offset-2">
                    <a asp-action="Details" asp-controller="Movie" asp-route-id="@Model.ReviewDto.MovieId" class="btn-primary btn form-control ">Back to Movie</a>
                </div>
                <div class="col-5">
                    <input type="submit" value="Create" class="btn btn-success form-control" />
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}