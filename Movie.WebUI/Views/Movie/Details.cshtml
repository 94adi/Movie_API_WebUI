@model Movie.WebUI.Models.Dto.MovieDto

<div id="movieIndexContainer" class="container">
    <div class="row">
        <div id="left-pane" class="col-lg-6 col-12">
            <div class="row">
                <div id="movieTitle">
                    <h1 id="movieTitleText">@Model.Title</h1>
                </div>
            </div>
            <div class="row">
                <div id="movieYear">
                    <h1 id="movieTitleText">(@Model.ReleaseDate.Year)</h1>
                </div>
            </div>
            <div class="row">
                <div id="movieGenres">
                    @if(Model.Genres != null && Model.Genres.Count() > 0)
                    {
                        @foreach(var genre in Model.Genres)
                        {
                            <span id="genreText">@genre.Name</span>
                        }
                    }                   
                </div>
            </div>
            <div id="movieRatingSection" class="row justify-content-between">
                <div class="col-md-3 col-4">
                    <div id="movieRating">
                        <i class="fas fa-star"></i>
                        <span>@Model.Rating</span>
                    </div>
                </div>
                <div class="col-md-7 col-8">
                    <div id="userRatingInput">
                        <label>Add your rating: </label>
                        <input id="ratingInput" type="number" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div id="reviewsLink" class="col">
                    <!--TO DO:Get review count-->
                    <a href="#" class="btn btn-outline-dark">See all reviews (20)</a>
                </div>
            </div>
            <div class="row">
                <div class="movieTrailer">
                    <div class="container">
                        <div class="ratio ratio-16x9">
                            <iframe width="560"
                                    height="315"
                                    src="https://www.youtube.com/embed/6hB3S9bIaco"
                                    title="YouTube video player"
                                    frameborder="0"
                                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                                    allowfullscreen>
                            </iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="right-pane" class="col-lg-6 col-12">
            <div class="row">
                <div id="moviePoster" class="col-11">
                    <div class="ratio ratio-1x1">
                        <img class="img-fluid object-fit-contain"
                             src="@Model.ImageUrl" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div id="movieDescription" class="col-11">
                    <p id="movieDescriptionText">
                        @Model.Description
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>