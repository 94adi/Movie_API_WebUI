@model Movie.WebUI.Models.Dto.MovieDto

<div id="movieIndexContainer" class="container">
    <div class="row">
        <div id="left-pane" class="col-lg-6 col-12">
            <div class="row">
                <div id="movieTitle">
                    <h1 id="movieTitleText">@Model.Title</h1>
                </div>
            </div>
            <div class="row">
                <div id="movieYear">
                    <h1 id="movieTitleText">(@Model.ReleaseDate.Year)</h1>
                </div>
            </div>
            <div class="row">
                <div id="movieGenres">
                    <span id="genreText">Action</span>
                    <span id="genreText">Comedy</span>
                    <span id="genreText">Drama</span>
                    <span id="genreText">Sport</span>
                </div>
            </div>
            <div id="movieRatingSection" class="row justify-content-between">
                <div class="col-md-3 col-4">
                    <div id="movieRating">
                        <i class="fas fa-star"></i>
                        <span>7.54/10</span>
                    </div>
                </div>
                <div class="col-md-7 col-8">
                    <div id="userRatingInput">
                        <label>Add your rating: </label>
                        <input id="ratingInput" type="number" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div id="reviewsLink" class="col">
                    <a href="#" class="btn btn-outline-dark">See all reviews (20)</a>
                </div>
            </div>
            <div class="row">
                <div class="movieTrailer">
                    <div class="container">
                        <div class="ratio ratio-16x9">
                            <iframe src="https://www.youtube.com/embed/6hB3S9bIaco" title="YouTube video" allowfullscreen></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="right-pane" class="col-lg-6 col-12">
            <div class="row">
                <div id="moviePoster" class="col-11">
                    <div class="ratio ratio-1x1">
                        <img id="moviePosterImg" class="img-fluid object-fit-cover"
                             src="https://humanehollywood.org/app/uploads/2020/06/5KCVkau1HEl7ZzfPsKAPM0sMiKc-scaled.jpg" />
