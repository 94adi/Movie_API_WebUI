@model Movie.WebUI.Models.Dto.UpdateMovieDto

<form method="post" asp-action="Update" asp-controller="Movie" enctype="multipart/form-data">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Update Movie</h1>
        <hr />

        <input hidden asp-for="Id" />
        <input hidden asp-for="CreatedDate" />
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="col-2">
                        <label asp-for="Title" class="control-label pt-2" style="font-size:20px;"></label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="col-2">
                        <label asp-for="Rating" class="control-label pt-2" style="font-size:20px;"></label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="Rating" class="form-control" />
                        <span asp-validation-for="Rating" class="text-danger"></span>
                    </div>

                    <div class="col-2">
                        <label asp-for="Description" class="control-label pt-2" style="font-size:20px;"></label>
                    </div>
                    <div class="col-10 pb-3">
                        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="col-2">
                        <label asp-for="ImageUrl" class="control-label pt-2" style="font-size:20px;"></label>
                    </div>

                    <div class="col-10 pb-3">
                        <input asp-for="Image" class="form-control" />
                        <input asp-for="ImageUrl" hidden class="form-control" />
                        <input asp-for="ImageLocalPath" hidden class="form-control" />
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>


                    <div class="col-2">
                        <label asp-for="ReleaseDate" class="control-label pt-2" style="font-size:20px;"></label>
                    </div>

                    <div class="col-10 pb-3">
                        <input asp-for="ReleaseDate" type="date" class="form-control" />
                        <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                    </div>
                 
                    <div class="col-5 offset-2">
                        <a asp-action="Index" asp-controller="Movie" class="btn-primary btn form-control ">Back to List</a>
                    </div>
                    <div class="col-5">
                        <input type="submit" value="Update" class="btn btn-success form-control" />
                    </div>
                </div>
            </div>
            <div class="col-2">
                <img class="w-100" asp-append-version="true" src="@Model.ImageUrl" alt="Movie Poster"/>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}